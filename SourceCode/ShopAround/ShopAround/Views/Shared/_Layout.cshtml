@using ShopAround.Common;
@{
    ViewBag.Title = "Index";
    //TODO: Declare the type for var loginSession, if you don't binding type, you cannot get or set data from this session
    var loginSession = (LoginSession)Session[CommonConstants.USER_SESSION];
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Shop Around</title>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/css/style.css" type="text/css" media="all" />
    <!--[if lte IE 6]><link rel="stylesheet" href="css/ie6.css" type="text/css" media="all" /><![endif]-->
    <script src="~/js/jquery-1.4.1.min.js" type="text/javascript"></script>
    <script src="~/js/jquery.jcarousel.pack.js" type="text/javascript"></script>
    <script src="~/js/jquery-func.js" type="text/javascript"></script>
    <!-- Bootstrap Core CSS -->
    <link href="~/Public/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="~/Public/vendor/metisMenu/metisMenu.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Public/dist/css/sb-admin-2.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/Public/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <!-- Shell -->
    <div class="shell">
        <!-- Header -->
        <div id="header">
            <h1 id="logo"><a href="/">shoparound</a></h1>
            <!-- Cart -->
                @Html.Partial("_CartInfo")
            <!-- End Cart -->
            <!-- Navigation -->           
                <div id="navigation">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="~/Home/About">About Us</a></li>
                        <li><a href="~/Login/Index">Login</a></li>                    
                        @if (loginSession != null)
                        {
                            <li style="color:white; padding:24px 15px">Hi, @loginSession.FullName</li>
                            <li><a href="~/Login/Logout">Logout</a></li>
                        } 
                        <li><a href="~/Register/Index">Register</a></li>   
                        <li><a href="~/Home/Contact">Contact</a></li>
                    </ul>
                </div>
           
            <!-- End Navigation -->
        </div>
        <!-- End Header -->
        <!-- Main -->
        <div id="main">
            <div class="cl">&nbsp;</div>
            <!-- Content -->
                <div id="content">
                    @RenderBody()
                </div>
            <!-- End Content -->
            <!-- Sidebar -->
            <div id="sidebar">
                <!-- Search -->
                    <div class="box search">
                        <h2>Search by <span></span></h2>
                        <div class="box-content">
                            <form action="#" method="post">
                                <label>Keyword</label>
                                <input type="text" class="field" />
                                <label>Category</label>
                                <select class="field">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <div class="inline-field">
                                    <label>Price</label>
                                    <select class="field small-field">
                                        <option value="">$10</option>
                                    </select>
                                    <label>to:</label>
                                    <select class="field small-field">
                                        <option value="">$50</option>
                                    </select>
                                </div>
                                <input type="submit" class="search-submit" value="Search" />
                            </form>
                        </div>
                    </div>
                <!-- End Search -->
                <!-- Categories -->
                <div class="box categories">
                    @{Html.RenderAction("_Category", "Home"); }
                </div>
                <!-- End Categories -->
            </div>
            <!-- End Sidebar -->
            <div class="cl">&nbsp;</div>
        </div>
        <!-- End Main -->
        <!-- Side Full -->
        <div class="side-full">
            <!-- More Products -->
                @{Html.RenderAction("_MoreProduct", "Home"); }
            <!-- End More Products -->
        </div>
        <!-- End Side Full -->
        <!-- Footer -->
        <div id="footer">
            <p class="left"> 
                <a href="/">Home</a> <span>|</span> 
                <a href="~/Home/About">About Us</a> <span>|</span> 
                <a href="~/Home/Contact">Contact</a>
            </p>
            <p class="right"> &copy; 2017 Shop Around. Design by <a href="~/Home/Contact">Đạo Nguyễn</a> </p>
        </div>
        <!-- End Footer -->
    </div>
    <!-- End Shell -->
</body>
</html>
