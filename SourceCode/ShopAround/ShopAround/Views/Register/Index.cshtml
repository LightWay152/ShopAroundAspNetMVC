@model ShopAround.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="register-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Registion</h3>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm("Register", "Register", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Enter Username" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Enter Password" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Enter your Name" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", @placeholder = "Enter your Mobile" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Enter your Address" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.DOB, new { @class = "form-control", @placeholder = "Enter your DOB" })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.RadioButtonFor(model => model.Gender, 1) Male<br />
                                    @Html.RadioButtonFor(model => model.Gender, 0) Female
                                </label>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.CreateAt, new { @class = "form-control", @placeholder = "Enter the day Register" })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.RadioButtonFor(model => model.Active, 1) Active?
                                </label>
                            </div>
                            <button type="submit" class="btn btn-lg btn-success btn-block">Register</button>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

